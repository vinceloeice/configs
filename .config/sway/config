#xwayland disabled

# Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term foot
floating_modifier $mod normal

# External scripts
#exec wlsunset -l 52.2 -L 21.0 & 

# Clipboard
exec wl-paste -t text --watch clipman store &

